{
    "name": "While Programming Language",
    "scopeName": "source.while",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#languageFunctions"
        },
        {
            "include": "#controls"
        },
        {
            "include": "#fundef"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "match": "(//).*$\\n?",
                    "name": "comment.line.double-slash.js"
                }
            ]
        },
        "languageFunctions": {
            "patterns": [
                {
                    "match": "(read|write|succ|pred)",
                    "name": "support.function"
                }
            ]
        },
        "controls": {
            "patterns": [
                {
                    "match": "(loop|while)",
                    "name": "keyword.control"
                }
            ]
        },
        "fundef": {
            "begin": "def",
            "beginCaptures": {
                "0": {
                    "name": "storage.type"
                }
            },
            "end": "(begin:|;)",
            "endCaptures": {
                "0": {
                    "name": "storage.type"
                }
            },
            "patterns": [
                {
                    "include": "#parameters"
                }
            ],
            "name": "entity.name.function"
        },
        "parameters": {
            "begin": "\\(",
            "beginCaptures": {
                "0": {
                    "name": "storage.type"
                }
            },
            "end": "\\)",
            "endCaptures": {
                "0": {
                    "name": "storage.type"
                }
            },
            "name": "variable.parameter"
        }
    }
}